root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ex,exs}]
indent_size = 2

[*.{js,ts}]
indent_size = 2

[*.{json,yml}]
indent_size = 2

[*.html]
indent_size = 2

[*.{css,sass,scss}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
